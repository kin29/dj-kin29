{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="mt-2">Quick Create Spotify-PlayList By ArtistName</div>

        {{ form_start(form, {'attr': {'class': 'mt-3'}}) }}
        <label>artist name</label>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.artistName1, {'attr': {class: 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.artistName2, {'attr': {class: 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.artistName3, {'attr': {class: 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.artistName4, {'attr': {class: 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.artistName5, {'attr': {class: 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_label(form.playlistName) }}
                {{ form_widget(form.playlistName, {'attr': {class: 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_label(form.isPrivate) }}
                {{ form_widget(form.isPrivate) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.createPlaylist, {'attr': {class: 'btn btn-primary'} }) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
