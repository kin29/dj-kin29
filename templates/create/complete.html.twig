{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container mt-3">
        <div class="col-md-5">
            Create playlist...complete🍺!!!
            <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text="dj-kin29でプレイリストを作成しました🤗" data-url="{{ url }}" data-hashtags="dj-kin29">Tweet</a>
            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            <div class="thumbnail">
                <div class="caption">
                    <ul>
                        <li>playlist-name: <a href="{{ url }}" target="_blank">{{ name }}</a></li>
                        <li>created-artists: {{ created_artists }}</li>
                    </ul>
                </div>
                <a href="{{ url }}" target="_blank">
                    <img src="{{ image }}" alt="image" style="width:100%">
                </a>
            </div>
            <div class="row mt-3">
                <div class="col-sm-10">
                    <a href="/" class="btn btn-primary">More Create！</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
