{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container mt-3">
        <div class="col-md-5">
            Created playlist...complete🍺!!!
            <div class="thumbnail">
                <div class="caption">
                    <ul>
                        <li>playlist-name: <a href="{{ url }}" target="_blank">{{ name }}</a></li>
                        <li>created-artists: {{ created_artists }}</li>
                    </ul>
                </div>
                <a href="{{ url }}" target="_blank">
                    <img src="{{ image }}" alt="image" style="width:100%">
                </a>
            </div>
            <div class="row mt-3">
                <div class="col-sm-10">
                    <a href="/" class="btn btn-primary">More Create！</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
